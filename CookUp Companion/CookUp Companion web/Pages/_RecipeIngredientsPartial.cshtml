@using Logic
@model CookUp_Companion_web.Pages.RecipeModel

@{
    Layout = "_Layout";
}
<div class="ingredients-list">
    <h3>Ingredients</h3>
    <form method="post" asp-page-handler="SaveSelectedIngredients">
        <input type="hidden" asp-for="CurrentRecipeId">
        @foreach (var ingredient in Model.SelectedRecipeIngredients)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ingredientIds" value="@ingredient.IngredientId" id="ingredient-@ingredient.IngredientId" checked>
                <label class="form-check-label" for="ingredient-@ingredient.IngredientId">
                    <div class="Ingredient">
                        <img src="@($"data:image/png;base64,{Convert.ToBase64String(ingredient.IngredientPicture)}")" alt="Ingredient Image">
                        <p class="IngredientQuantity">@ingredient.Quantity</p>
                        <p class="IngredientMeasurment">@ingredient.SelectedUnit</p>
                        <p class="IngredientName">@ingredient.IngredientName</p>
                    </div>
                </label>
            </div>
        }
        <button type="submit" class="btn btn-primary">Add Selected Ingredients</button>
    </form>
</div>
