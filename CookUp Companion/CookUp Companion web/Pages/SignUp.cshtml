@page
@model CookUp_Companion_web.Pages.SignUpModel
@{
}


<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                 
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                <form method="post" class="mx-1 mx-md-4" >
                    
                    <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span  asp-validation-for="Username" class="text-danger"></span>
                      <input type="text" asp-for="Username" id="name"  class="form-control" />
                      <label class="form-label" for="name">Your Username</label>
                      
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span  asp-validation-for="FirstName" class="text-danger"></span>
                      <input type="text" asp-for="FirstName" id="name"  class="form-control" />
                      <label class="form-label" for="name">Your First name</label>
                      
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span  asp-validation-for="LastName" class="text-danger"></span>
                      <input type="text" asp-for="LastName" id="name"  class="form-control" />
                      <label class="form-label" for="name">Your Last Name</label>
                      
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        <span asp-validation-for="Email" class="text-danger"></span>
                      <input  asp-for="Email" id="email"  class="form-control" />
                      <label class="form-label" for="email">Your Email</label>
                    </div>
                  </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <input type="password" asp-for="Password" id="password" class="form-control" />
                            <label class="form-label" for="password">Password</label>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <input type="password" asp-for="ConfirmPassword" id="confirmPassword" class="form-control" />
                            <label class="form-label" for="confirmPassword">Repeat your password</label>
                        </div>
                    </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" />
                    <label class="form-check-label" for="form2Example3">
                      I agree all statements in <a href="#!">Terms of service</a>
                    </label>

                    
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                      <p class="small fw-bold mt-2 pt-1 mb-0">
                                    You have an account already? <a asp-page="/Login"
                                                              class="link-danger">Login</a>
                         </p>
                  </div>
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                  </div>

                </form>
               

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}