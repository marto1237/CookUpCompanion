@page
@model CookUp_Companion_web.Pages.ForgotPasswordModel
@{
    <hr>
    @if (TempData["IsEmailExist"] != null && (bool)TempData["IsEmailExist"])
    {
        <!-- Existing user with the provided email -->
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Oops </strong>
            @if (ViewData["EmailError"] != null)
            {
                <span class="text-danger">@ViewData["EmailError"]</span>
            }
            <br />
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else if (TempData["PasswordChanged"] != null && (bool)TempData["PasswordChanged"])
    {
        <!-- Password changed successfully -->
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success! </strong>Your password has been changed successfully.
            <br />
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }


        <div class="container" id="forgotPassword">
        <div class="row">
            <div class="row">
                <div class="col-md-12 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <h3><i class="fa fa-lock fa-4x"></i></h3>
                                <h2 class="text-center">Forgot Password?</h2>
                                <p>You can reset your password here.</p>
                                <div class="panel-body">

                                    <form class="form" method="post">
                                        <fieldset>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                    <input asp-for="Email" id="email" class="form-control form-control-lg">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                                    <input asp-for="NewPassword" id="newPassword" class="form-control form-control-lg" placeholder="New Password" type="password">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                                    <input asp-for="ConfirmPassword" id="confirmPassword" class="form-control form-control-lg" placeholder="Confirm Password" type="password">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit">
                                            </div>
                                        </fieldset>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
